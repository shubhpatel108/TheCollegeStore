<!--page wrapper-->
<% if not books.nil? %>
    <div class='panel'>
        <div class='panel-body'>
            <div class='row'>
                <% books.each do |book| %>
                    <div class="col-sm-3 col-lg-3 col-md-3">
                        <div class="thumbnail">
                            <%= image_tag book.info.image.url, {:style => 'width:100px;height:150px;'} %>
                            <div class="caption">
                                <h5 class="pull-right">&#8377;<%= book.price %></h5>
                                <h5>
                                    <b><%= book.info.title %></b>
                                </h5>
                                <% if not book.sold %>
                                    <span class='label label-primary'><%="Not Collected"%></span>
                                <% else %>
                                    <span class='label label-primary'><%="Collected"%></span>
                                <% end %>
                                <p>
                                    <b>Author: </b> <%= book.info.author %>
                                    <br/>
                                    <b>Edition: </b> <%= book.edition%>
                                    <br />
                                    <%if not book.sold %>
                                        <b>Collected: </b> <%= "NO" %>
                                    <%else%>
                                        <b>Collected: </b> <%= "YES" %>
                                    <%end%>
                                    <br />
                                    <%if book.reserved %>
                                        <b>Seller: </b>  <%=book.user.first_name%> <%=book.user.last_name%></td>
                                    <%end%>
                                </p>
                            </div>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
<% else %>
    <div class='panel'>
        <center><h3> There are no purchased books. </h3></center>
    </div>
<% end %>