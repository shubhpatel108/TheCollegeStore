// Header Image Change Script

if(document.URL != "http://www.thecollegestore.in/" && document.URL!= "http://thecollegestore.in/" && document.URL!= "http://localhost:3000/"){
  $('#content-wrap').css({
    "background-size" : '100% 100%'
  });
  }

if(document.URL == "http://www.thecollegestore.in/" || document.URL== "http://thecollegestore.in/" || document.URL== "http://localhost:3000/" || document.URL== "http://localhost:3000/#top"){

    $("#page-body").css("width","90%");
