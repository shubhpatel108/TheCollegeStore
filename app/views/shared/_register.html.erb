<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">x</button>
        <h2><i class="fa fa-user"></i>Sign up</center></h2>
    </div>

    <div class="modal-body">
      <%= form_for(User.new, url: registration_path(:user), :html => {:class=>'form-signin', :id => "new_user_form"}) do |f| %>

        <%= f.text_field :first_name, autofocus: true, :placeholder => 'First Name', :class=>'form-control' %>

          <%= f.text_field :last_name, :placeholder => 'Last Name', :class=>'form-control' %>

          <%= f.email_field :email, :placeholder => 'Email', :class=>'form-control' %>

          <%= f.password_field :password, :placeholder => 'Password', autocomplete: "off", :class=>'form-control'%>

          <%= f.text_field :mobile, :placeholder => 'Mobile', :class=>'form-control', :id => "entered_mobile" %>

          <%= f.hidden_field :college_id, :value=> cookies[:college_id], :class => "form-control" %>

          <%= f.file_field :profile_pic %>

          <%= f.text_field :verification_code, :placeholder => "Enter Verification Code", :id => "verification_code", :class => "form-control", :style => "display:none;" %>

          <button type="button" class="btn btn-primary" onclick="verify_mobile()" id="verified_sign_up"> Sign Up </button>
      <% end %>
     </div>

    <div class="modal-footer"> 
      <center><%= render "devise/shared/links_signup" %></center>
    </div>
  </div>
</div>

<script type="text/javascript">
  function verify_mobile(){
    mobile_no = document.getElementById("entered_mobile").value;
    post("/send_verification_sms", {mobile: mobile_no, button: "verified_sign_up"});
    document.getElementById("verification_code").style.display = "block";
    document.getElementById("entered_mobile").remove();
  }
</script>
