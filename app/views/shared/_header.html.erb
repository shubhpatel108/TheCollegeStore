<!DOCTYPE html>
<html lang="en">
    <head>
        <title>The College Store</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
        <%= stylesheet_link_tag "tcs.css" %>
        <!--<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>-->
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function() {
                $('.panel-heading').on("click", function(e) {
                    if ($(this).hasClass('panel-collapsed'))
                    {
                        $(this).parents('.panel').find('.panel-body').slideDown();
                        $(this).removeClass('panel-collapsed');
                        $(this).find('i').removeClass('glyphicon-chevron-down').addClass('glyphicon-chevron-up');
                    }
                    else {
                        $(this).parents('.panel').find('.panel-body').slideUp();
                        $(this).addClass('panel-collapsed');
                        $(this).find('i').removeClass('glyphicon-chevron-up').addClass('glyphicon-chevron-down');
                    }
                });
            });
        </script>
    </head>
    <body>
        <!--navbar-->
        <header class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <a href="/books" class="navbar-brand"><%= image_tag("logo-final.png", :width => 200) %></a>
                    <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                        <i class='fa fa-bars'></i>
                    </button>
                </div>

                <div class="navbar-collapse collapse" id="navbar-main">
                    <ul class="nav navbar-nav navbar-right">
                        <% if !user_signed_in? %>
                            <li>     
                              <a href="#" onclick="$('#login').modal('show');">Login
                                <i class="fa fa-sign-in"></i>
                              </a>
                            </li>
                            <li>
                              <a href="#" onclick="$('#register').modal('show');">Register
                                <i class="fa fa-user"></i>
                              </a>
                            </li>
                        <% else %>
                            <li><a href="/book_groups/new" class="button button-primary">Sell<i class="fa fa-plus-square fa-padding"></i></a></li>
                            <li>
                              <span style="display: -webkit-inline-box;display: -moz-inline-stackb;font-size: 17px;"><%= link_to "#{current_user.first_name}", "/profiles/#{current_user.first_name}-#{current_user.last_name}/#{current_user.id}", :class => 'username-header' %></span>
                            </li>
                            <li>
                              <a href="/logout" class="">
                                <span class="fa fa-sign-out"></span>
                                <span class="nav-tooltip">Log out</span>
                              </a>      
                            </li>
                        <%end%>
                        <li><a href="#" ><i class="fa fa-book"></i> Explore Books</a></li>
                        <li><a href="#" onclick="$('#cart-content').modal('show');"><i class='fa fa-shopping-cart'></i> Cart(<span id="cart-item-count">0</span>)</a></li>
                    </ul>
                    <div id="main_search_bar"><a href="#" style="margin:0; padding:0"><%= render :partial => 'shared/search', :locals => {:book_names => $book_names} %></a></div>
                </div>
            </div>
        </header>
        <!--navbar-->
        <!-- cart modal-->
        <div class="modal fade" id="cart-content">
            <%= render :partial => "cart/cart", :locals => {:books => session[:cart]} %>
        </div>
        <!-- login modal -->
        <div class="modal fade" id="login">
           <div class="modal-dialog">
                <div class="modal-content">
                  <%= render :partial => "shared/login" %>
                </div>
            </div>
        </div>
        <!-- login modal-->
    
        <!-- register modal -->
        <div class="modal fade" id="register">
           <div class="modal-dialog">
                <div class="modal-content">
                  <%= render :partial => "shared/register" %>
                </div>
            </div>
        </div>
        <!-- register modal-->
    </body>
</html>