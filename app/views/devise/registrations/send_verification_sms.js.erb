var buttons = document.getElementsByClassName("<%=@button%>");
for(i=0;i<buttons.length;i++)
{
	buttons[i].setAttribute('type', 'submit');
	buttons[i].setAttribute('onclick', "");
}

var veri_codes = document.getElementsByClassName("verification_code_class");
for(i=0;i<veri_codes.length;i++)
{
	veri_codes[i].style.display = "block";
}

var mobiles = document.getElementsByClassName("entered_mobile_class");
var len = mobiles.length
for(i=0;i<len;i++)
{
	mobiles[0].remove();
}
