
	<div class="sign-in-form-devise">
<p>Sign In</p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name), :validate => true) do |f| %>
    <table class="sign-in-form-table">
	  	<tr>
	  		<td><%= f.email_field :email,:placeholder => 'Email', autofocus: true, :validate => {:uniqueness => false} %>
	  		</td>
	  	</tr>

	    <tr>
	    	<td><%= f.password_field :password, :placeholder => 'Password', autocomplete: "off" %>
	    	</td>
	    </tr>

	    <% if devise_mapping.rememberable? -%>
	      <tr>
	      	<td><%= f.check_box :remember_me %> <%= f.label :remember_me %>
	      	</td>
	      </tr>
	    <% end -%>

	    <tr>
	    	<td>
	    		<%= f.submit "Sign in" %>
	    	</td>
	    </tr>

    </table>
<% end %>

<%= render "devise/shared/links" %>
</div>
