<div class="modal-dialog">
	<div class="modal-content">
		<div class="modal-header">
		    <h2><i class="fa"></i>Resend confirmation instructions</h2>
		</div>

		<div class="modal-body">
			<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { :class => "smart-form", method: :post }) do |f| %>

				<div>
					<%= f.email_field :email, autofocus: true, :placeholder => 'Email', :class => "form-control", :id => 'email' %>
				</div>

				<center><%= f.submit "Resend confirmation instructions", :class => "form-control btn btn-primary" %></center>

			  <% end %>
			<%= render "devise/shared/links" %>
		 </div>
	</div>
</div>
