<script type="text/javascript">
$(document).ready(function()
{
    $(".point").each(function(index,that){
        $(that).html("<i class='fa fa-user'></i>");
    });
    $("#_1").each(function(index,that){
        $(that).html("<i class='fa fa-child fa-2x fa-fw' style='line-height:70px;'></i>");
    });
    $("#_4,#_7,#_11").each(function(index,that){
        $(that).append("<br/><i class='fa fa-inr' ></i>");
    });
    $("#_4").append(" <b>10</b>");
    $("#_7").append(" <b>15</b>");
    $("#_11").append(" <b>25</b>");
    $("#_12").each(function(index,that){
        $(that).html("<i class='fa fa-refresh'></i>");
    });
});
</script>
<style>
    .referral{
        position: relative;
        height:500px;
        width:500px;
        margin-left:auto;
        margin-right:auto;
        border-radius:100%;
        border:10px solid white;
        padding:70px;
    }
    .point
    {
        position: absolute;
        text-align: center;
        vertical-align: center;
        line-height: 70px;
        height:70px;
        width:70px;
        border-radius:100%;
        background-color: #fff;
    }
    .completed
    {
        background-color: green;
    }
    #message-box
    {
        padding: 20px;
        margin-right: auto;
        margin-left: auto;
        border-radius: 100%;
        height: 100%;
        width: 100%;
        background-color: #fff;
    }
    #_4,#_7,#_11
    {
        border:2px dashed #777;
        line-height: 35px;
    }
    #_1
    {
        top:-40px;
        left:220px;
    }
    #_2
    {
        right:80px;
        top:0px;
    }
    #_3
    {
        right:-10px;
        top:90px;
    }
    #_4
    {
        right:-40px;
        top:210px;
    }
    #_5
    {
        right:-10px;
        bottom:90px;
    }
    #_6
    {
        right:80px;
        bottom:0px;
    }
    #_7
    {
        bottom:-40px;
        right:220px;
    }
    #_8
    {
        left:80px;
        bottom:0px;
    }
    #_9
    {
        left:-10px;
        bottom:90px;
    }
    #_10
    {
        left:-30px;
        top:210px;
    }
    #_11
    {
        left:-10px;
        top:90px;
    }
    #_12
    {
        left:80px;
        top:0px;
    }
</style>
<div id="page" class="container" style="margin-bottom:100px;">
  <div class="row" style="height:400px">
	  <div class="col-md-8">
			<div class="referral">
				<% i=1 %>
				<% while i<=@reco_completed %>
					<div id="_<%=i%>" class="point completed">
					</div>
					<% i+=1 %>
				<% end %>
				<% while i<=12 %>
					<div id="_<%=i%>" class="point">
					</div>
					<% i+=1 %>
				<% end %>
				<div id="message-box">
					<center>
					    <h2>Share & Earn</h2>
					    <hr />
					    <p>
					        Earn <b>FREE</b> recharges for every sign up!<br />
					    </p>
					</center>
				</div>
			</div>
		</div>
		  <div class="col-md-4">
		    <div class="panel">
		      <div class="panel-heading"><h3>Your Earnings</h3></div>
		      <div class="panel-body">
		        <h1 class="number">
		          <small>Your Past Earnings</small>
		          <span class="pull-right">
		            <small>Rs.</small> <span id="earn_paid"><%= @earning_paid %></span>
		          </span>
		        </h1>
		        <h1 class="number">
		          <small>Your still earn</small>
		          <span class="pull-right">
		            <small>Rs.</small> <span id="earn_due"><%= @earning_due %></span>
		          </span>
		        </h1>
	          <a href="/recharge-mobile" data-remote=true>
	           <button class="btn btn-info">Recharge Mobile</button>
	          </a>
		    </div>
		    </div>
		    <div class="panel">
		      <div class="panel-heading"><h3>Share &amp; Earn</h3></div>
		      <div class="panel-body">
		        <p>Share the following link with your friends, and get free recharges when someone signs up!</p>
		        <input type="text" value="http://thecollegestore.in/<%=current_user.id%>/<%=current_user.first_name%>-<%=current_user.last_name%>/recommend" class="form-control">
		        <br>
		        <center>
		        <a href="http://facebook.com">
		          <i class="fa fa-facebook-square fa-3x"></i>
		        </a>
		        <a href="http://twitter.com">
		          <i class="fa fa-twitter-square fa-3x"></i>
		        </a>
		        <a href="#" onclick="$('invite-email-modal').show()">
		          <i class="fa fa-envelope-square fa-3x"></i>
		        </a>
		        </center>
		    </div>
	    </div>
	  </div>
	</div>
</div>