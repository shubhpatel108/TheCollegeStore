<%
meta site: "TheCollegeStore",
     keywords: ["Vendor Sign In"]
%>

<% provide(:title, "Sign In") %>
<h1>Sign In</h1>

<%= form_for(:session, url: city_vendor_sessions_path) do |f| %>
	
	<%= f.label :email %>
	<%= f.email_field :email %> <br><br>

	<%= f.label :password %>
	<%= f.password_field :password %><br><br>

    <%= f.label :remember_me %>  
    <%= f.check_box :remember_me, {}, true %>  <br><br>
	
	<%= f.submit "Sign in" %><br><br>
<% end -%>

<p>New Vendor?</p> <%= link_to "Sign up now", city_vendor_signup_path %>
<%= link_to "Forgot password?", new_vendor_password_path %>