<%
meta site: "TheCollegeStore",
     description: "Book details",
     keywords: ["#{@book_group.title}", "#{@book_group.author}"]
%>

<% title @book_group.title + " by " + @book_group.author %>

<!--page wrapper-->
<div id="page" class="container center-block">
  <div class='row'>
    <div class="col-md-9">
      <div class='panel'>
        <div class='panel-body'>
          <div class="row">
            <div class='col-md-3'>
              <%= image_tag @book_group.image.url, {:class=>"img-responsive"} %>
            </div>
            <div class='col-md-9'>
              <h1>
                <%= @book_group.title %>
              </h1>
              <div class='row'>
                <div class='col-md-8'>
                  <p>
                    <b><i class='fa fa-user'></i> Authors:</b> 
                    <span class='label label-primary'><%= @book_group.author%></span>
                  </p>
                  <p>
                    <b><i class='fa fa-bank'></i> Publisher:</b> 
                    <span class='label label-info'><%= @book_group.publisher%></span>
                  </p>
                  <h3>
                      <span class='label label-success'><%= @details.count - @reserved_count %> Sellers</span>
                  </h3>
                </div>

                <div class="col-md-4">
                  <% if @wished %>
                    <a href="/wishlist/remove/<%=@book_group.id%>" data-remote=true  id="remove_from_wishlist">
                      <button class="btn-sm btn btn-danger">Remove from Wishlist</button>
                    </a>
                  <% else %>
                    <a href="/wishlist/add/<%=@book_group.id%>" data-remote=true  id="add_to_wishlist">
                      <button class="btn-sm btn btn-success">Add to Wishlist</button>
                    </a>
                  <% end %>

                  <button class="btn btn-info" onclick="fb_feed('Get <%=@book_group.title%> by <%=@book_group.author%> at TheCollegeStore', '<%=book_detail_path(@book_group)%>', '<%=@book_group.image.url%>','Get used <%=@book_group.title%> by <%=@book_group.author%> at very low prices in your own college!')">Recommend on facebook</button>
                </div>


              </div>
            </div>
          </div>
          <div class='row'>
            <div class='col-md-12'>
              <h3>
                Product Description
              </h3>
              <p>
                Charging your phone has been made simpler with Mi's 10400 mAh Power Bank. Its aluminum casing surrounds the dual battery cell technology developed by LG and Samsung. Enjoy the pleasures of your smartphone for longer periods with this highly convenient Power Bank.
              </p>
            </div>
          </div>
          <div class='row' name='buy'>
            <div class='col-md-6'>
              <h3>
                Used Books available from <%= @details.count%> sellers
              </h3>
              <table class='table table-striped table-hover sellers'>
                <tbody>
                  <tr>
                    <th>Seller</th>
                    <th>Edition</th>
                    <th>Price</th>
                    <th>Buy</th>
                  </tr>
                  <% @details.each do |book, user| %>
                    <tr>
                      <td><%= user.first_name %> <%= user.last_name %></td>
                      <td>
                        <% if not book.edition.nil? %>
                          <%= book.edition %><span class="superscript"><%=superscript(book.edition)%> </span>Edition
                        <% end %>
                      </td>
                      <td>
                        <% if not book.reserved %> 
                          <%= book.price %></td>
                        <% end %>
                      <td>
                        <% if current_user.nil? || current_user.id!=book.user_id %>
                          <% if book.reserved %> 
                            <button type="button" class="btn btn-warning" disabled><i class="fa fa-check fa-padding"></i>Sold</button>
                          <% else %>
                            <a href="/add_item/<%= book.id%>" class="" name="Add to cart" data-remote=true> 
                              <button class="btn-sm btn btn-success"><i class="fa fa-shopping-cart fa-1x fa-color_white cart-icon"></i>Add To Cart</button>
                            </a>
                          <% end %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
            <div class='col-md-4 col-md-offset-2'>
              <h3>
                New Books available from :
              </h3>
              <% @flipkart_links.each do |book|%>
                <a href="<%=flipkart_link(book[:isbn])%>" title="Buy <%=@book_group.title%> from Amazon" target="_blank">
                  <button class='btn btn-sm btn-warning'>
                    Buy new book from Flipkart
                  </button>
                </a>
              <% end %>
              <% if not @isbn_amazon.nil? %>
                <a href="<%=amazon_link(@isbn_amazon)%>" title="Buy <%=@book_group.title%> from Amazon" target="_blank">
                  <button class='btn btn-sm btn-warning'>
                    Buy new book from Amazon
                  </button>
                </a>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='col-md-3'>
      <div class="panel">
        <div class="panel-heading">
          Suggested Books
        </div>
        <div class="panel-body">
          <% @suggested_books.each do |book|%>
            <div class="thumbnail">
              <a href="<%= book_detail_path(book) %>">
                <%= image_tag @book_group.image.url, {:class=>"img-responsive", :style=>'width:100px;height:150px;'} %>
              </a>
              <div class="caption">
                <h5 class="pull-right">&#8377;<%= book.min_price %></h5>
                <h5>
                <a href="<%= book_detail_path(book) %>"><b><%= book.title %></b></a>
              </h5>
                <p>
                  <b>Author: </b>  <a href='#'><%= book.author %></a>
                  <br/>
                  <b>Publisher: </b>  <a href='#'><%= book.publisher %></a>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>




