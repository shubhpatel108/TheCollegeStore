<% title "Blog" %>

<div class="container" id="page">
	<%= button_to 'Create New Post', {:action => 'new'} , :class => 'btn btn-success pull-right' %>
    <h3>All Posts</h3>
        <% @posts.each do |post| %>
          <%= render :partial => "shared/post", :locals => {:post => post}%>
        <% end %>
</div>

